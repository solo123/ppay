      div class="flash"
        javascript:
          setTimeout( function() {
            $.gritter.add({
              title: 'Welcome ',
              text: 'Lorem ipsum.',
              image: '/favicon.png',
              sticky: true,
              time: '',
              class_name: 'my-sticky-class'
              });
              }, 500);     
          }
        
      
      
