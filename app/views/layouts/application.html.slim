doctype html
html
  head
    meta charset="utf-8"
    == favicon_link_tag '/favicon.png'
    meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport"

    title Ppay

    link href="/color_admin/assets/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css" rel="stylesheet"
    link href="/color_admin/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet"
    link href="/color_admin/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet"
    link href="/color_admin/assets/css/animate.min.css" rel="stylesheet"
    link href="/color_admin/assets/css/style.min.css" rel="stylesheet"
    link href="/color_admin/assets/css/style-responsive.min.css" rel="stylesheet"
    link href="/color_admin/assets/css/theme/red.css" rel="stylesheet"

    link href="/color_admin/assets/plugins/jquery-jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" 
    link href="/color_admin/assets/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" 
    link href="/color_admin/assets/plugins/bootstrap-datepicker/css/datepicker3.css" rel="stylesheet" 
    link href="/color_admin/assets/plugins/gritter/css/jquery.gritter.css" rel="stylesheet" 
    
    script src="/color_admin/assets/plugins/jquery/jquery-1.9.1.min.js"
    == stylesheet_link_tag    "application", media: "all"
    == javascript_include_tag "application"
    
     
  body
    div id="page-loader" class="fade in"
      span class='spinner'
    div id="page-container" class="fade in page-sidebar-fixed page-header-fixed"
      div id="header" class="header navbar navbar-default navbar-fixed-top"
        div class='container-fluid'
          div class='navbar-header'
            ==link_to image_tag('Logo.jpg'), '/', class:'navbar-brand'
            button class='navbar-toggle' data-click='sidebar-toggled' type='button'
              span class='icon-bar'
              span class='icon-bar'
              span class='icon-bar'

      div id="sidebar" class="sidebar"
        ul class="nav"
          li class='nav-profile'
            div class='info'
              big 普尔支付 
              span 渠道系统
        ul class='nav'
          == render 'shared/left_menu_item',
                  :local => {:title => '首页',
                              :active => 'home',
                              :class => 'fa-laptop'}
                              
          == render 'shared/left_menu_item',
                  :local => {:title => '商户数据',
                              :active => 'clients',
                              :data =>  [ ['商户', clients_path] ], 
                              :class => 'fa-2x fa-credit-card'}
          
          == render 'shared/left_menu_item',
                  :local => {:title => '交易数据',
                              :active => 'trades',
                              :data => [ ['交易', trades_path] ],
                              :class => 'fa-2x fa-database'}
                              
          == render 'shared/left_menu_item',
                  :local => {:title => '清算数据',
                              :active => 'clearings',
                              :data => [ ['清算', clearings_path] ], 
                              :class => 'fa-2x fa-database'}

          == render 'shared/left_menu_item',
                   :local => {:title => '数据报表',
                             :active => 'imp_logs',
                             :data => [['导入', imp_logs_path ],
                                       ['基础', imp_qf_customers_path],
                                       ['交易', imp_qf_trades_path ], 
                                       ['清算',imp_qf_clearings_path ] ], 
                             :class => 'fa-2x fa-area-chart'}
                             
          == render 'shared/left_menu_item',
                  :local => {:title => '人员管理',
                              :active => 'manages',
                              :data => [['员工', users_path],
                                        ['代理', agents_path] ],

                              :class => ' fa-2x fa-users' }
                                    
          == render 'shared/left_menu_item',
                  :local => {:title => '资源信息',
                            :active => 'resources',
                            :data => [ ['联系人', contacts_path], ['地址', addresses_path], ['刷卡机', pos_machines_path] ],
                            :class => 'fa-2x fa-users' }
          
          == render 'shared/left_menu_item',
                  :local => {:title => '个人设置',
                              :active => 'settings',
                              :data => [['资料', profile_info_path ] ], 
                              :class => 'fa-2x' }
          
                            
          li
            a href='javascript:;' class='sidebar-minify-btn' data-click='sidebar-minify'
              i class="fa fa-angle-double-left"
                              

      div class='content'  id='content'
        == yield

      a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade" data-click="scroll-top"
        i class="fa fa-angle-up"

    script src="/color_admin/assets/plugins/jquery/jquery-migrate-1.1.0.min.js"
    script src="/color_admin/assets/plugins/jquery-ui/ui/minified/jquery-ui.min.js"
    script src="/color_admin/assets/plugins/bootstrap/js/bootstrap.min.js"
