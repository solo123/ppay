    / script src="/color_admin/assets/js/login-v2.demo.min.js"
    script src="/color_admin/assets/js/apps.min.js"
    
    - if false
      script src="/color_admin/assets/crossbrowserjs/html5shiv.js"
      script src="/color_admin/assets/crossbrowserjs/respond.min.js"
      script src="/color_admin/assets/crossbrowserjs/excanvas.min.js"

    script src="/color_admin/assets/plugins/gritter/js/jquery.gritter.js"
    script src="/color_admin/assets/plugins/flot/jquery.flot.min.js"
